<div class="mx-auto p-2" style="width: 600px;">


<div>
  <div>
    <h1>
      List of all food items
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new food item
    </h2>

    <form action="/insert_food_item" method="post">
      <div class="mb-1">
        <label for="name_box">
          Name
        </label>
        <input type="text" id="name_box" name="query_name">
      </div>

      <div class="mb-1">
        <label for="category_box">
          Category
        </label>
        <input type="text" id="category_box" name="query_category">     
      </div>

      <div class="mb-2">
        <label for="fridge_select">
          Fridge
        </label>
        <select id="fridge_select" name="query_fridge_id">
          <% @list_of_fridges.each do |fridge| %>
            <option value="<%= fridge.id %>"><%= fridge.name %></option>
          <% end %>
        </select>
      </div>

      <button>
        Add item
      </button>
    </form>
  </div>
</div>

<hr>

<div>
  <div>
    <table class="table table-bordered">
      <tr>
        <!--<th>ID</th>-->
        <th>Name</th>
        <th>Category</th>
        <th>Fridge</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
        <th></th>
      </tr>

      <% @list_of_food_items.each do |item| %>
        <tr>
          <!--<td><%#= item.id %></td>-->
          <td><%= item.name %></td>
          <td><%= item.category %></td>
          <td><%= item.fridge.name %></td>
          <td><%= time_ago_in_words(item.created_at) %> ago</td>
          <td><%= time_ago_in_words(item.updated_at) %> ago</td>
          <td><a href="/food_items/<%= item.id %>">Update item</a></td>
          <td>
            <form action="/delete_food_item/<%= item.id %>" method="get">
        <button type="submit">
            Delete item
          </button>
        </form>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
</div>
